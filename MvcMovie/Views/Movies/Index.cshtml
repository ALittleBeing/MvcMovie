@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Movies List";
}

<div class="container row p-0 m-0">
    <div class="col-9">
        <form asp-controller="Movies" asp-action="Index" method="get">
            <p>
                <select asp-for="MovieGenre" asp-items="Model.Genres">
                    <option value="">All</option>
                </select>

                Title: <input type="text" asp-for="SearchString"/>
                <input type="submit" value="Filter" />
            </p>
        </form>

    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white" asp-action="Create">Add Movie</a>
    </div>
</div>




<div class="col-12 p-3 m-3">
    <table class="table table-striped table-responsive-sm caption-top" >
        <caption>List of Movies</caption>
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(model => model.Movies[0].Title), "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(model => model.Movies[0].ReleaseDate),"Index", new { sortOrder = ViewBag.DateSortParm })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies[0].Rating)
                </th>
                <th>
                    @Html.ActionLink(Html.DisplayNameFor(model => model.Movies[0].Price),"Index", new { sortOrder = ViewBag.PriceSortParm })
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>
                        <a class="nav-link" asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        @*<a class="btn btn-danger btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
