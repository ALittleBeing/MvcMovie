@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{ 
    ViewData["Title"] = "Index";
}

<h1>List of Roles</h1>

<a class="btn btn-primary" asp-action="Create">Create Role</a>

<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Role Name</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                </tr>
            }
        }
        else
        {
                <tr>
                    No roles found
                </tr>
        }
    </tbody>
</table>
